<h2  style="font-family:Berkshire Swash;text-align:center; ">Your home<small><i class='bx bxs-home' style="color:rgba(93,220,246,0.89)"></i></small></h2>
<form action="/update/<%=home._id%>/oe"  method="post" enctype="multipart/form-data" >
  <div style="margin:50px 270px 80px 270px">

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">City</label>
    <div class="col-sm-10">
      <input name="city" type="text"  value="<%=home.city%>" class="form-control" placeholder="City">
    </div>
  </div>
  <br>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">Conditions</label>
    <div class="col-sm-10">
      <textarea name="conditions" class="form-control" rows="4" cols="4"  ><%=home.conditions%></textarea>
    </div>
  </div>
  <br>
  <fieldset class="form-group">
    <div class="row">
      <label class="col-form-label col-sm-2 pt-0" style="border:none">Image your home</label>
      <div class="col-sm-10">
        <div class="form-check" id="fromPC" >
          <label  class="form-label">Image 1</label>
          <input class="form-control" name="myFile" type="file">
        </div>
    </div>
    </div>
  </fieldset>

  <br>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">How much day?</label>
    <div class="col-sm-10">
      <input name="day" type="text" class="form-control" placeholder="number"  value="<%=home.day%>">
    </div>
  </div>
  <br>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Full location</label>
    <div class="col-sm-10">
      <input name="location" type="text" class="form-control"  value="<%=home.location%>" placeholder="Full location">
    </div>
  </div>
  <hr>
  <div class="form-group row ">
    <div class="col-sm-12">
      <button type="submit"   style="float:right" value="edit" name="button" class="btn btn-info">Publish</button>
          <a href="/mynews" style="text-decoration: none"> <button  name="btn"  style="float:right" value="cancel" class="btn btn-outline-secondary" >Cancel</button> </a>
    </div>
  </div>

</div>
</form>


